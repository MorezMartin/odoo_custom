<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	<record id="mep_serv_form" model="ir.ui.view">
	    <field name="name">sale.mep_serv.form</field>
	    <field name="model">sale.mep_serv</field>
	    <field name="arch" type="xml">
		<form string="MEP, Service">
	 	    <group col="4">
			<field name="name"/>
			<field name="partner_id"/>
			<field name="date_order"/>
		    </group>
		</form>
	    </field>
	</record>
        <record id="mep_serv_tree" model="ir.ui.view">
	    <field name="name">sale.mep_serv.tree</field>
	    <field name="model">sale.mep_serv</field>
	    <field name="arch" type="xml">
	        <tree string="MEP, Service">
		    <field name="name"/>
       		<field name="partner_id"/>
		    <field name="date_order"/>
		</tree>
	    </field>
	</record>
	
        <record id="mep_serv_action" model="ir.actions.act_window">
            <field name="name">MEP, Service</field>
            <field name="type">ir.actions.act_window</field>
     	    <field name="res_model">sale.mep_serv</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
     	    <field name="view_id" ref="mep_serv_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Cliquez pour cr√©er une mise en place.
              </p>
            </field>
        </record>

	<menuitem name="MEP, Service" parent="base.menu_sales" id="menu_mep_serv" action="mep_serv_action" sequence="2"/>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
            <form string="Sales Order">
                <header>
                    <button name="create_mep" states="confirmed" string="Create MEP" groups="base.group_user"/>
                </header>
            </form>
            </field>
        </record>
    </data>
</openerp>

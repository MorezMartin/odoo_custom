<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	<record id="mep_serv_form" model="ir.ui.view">
	    <field name="name">sale.mep_serv.form</field>
	    <field name="model">sale.mep_serv</field>
	    <field name="arch" type="xml">
		<form string="MEP, Service">
	 	    <group col="4">
			<field name="name"/>
			<field name="partner_id"/>
			<field name="date_order"/>
		    </group>
		</form>
	    </field>
	</record>
        <record id="mep_serv_tree" model="ir.ui.view">
	    <field name="name">sale.mep_serv.tree</field>
	    <field name="model">sale.mep_serv</field>
	    <field name="arch" type="xml">
	        <tree string="MEP, Service">
		    <field name="name"/>
       		<field name="partner_id"/>
		    <field name="date_order"/>
		</tree>
	    </field>
	</record>
	
        <record id="mep_serv_action" model="ir.actions.act_window">
            <field name="name">MEP, Service</field>
            <field name="type">ir.actions.act_window</field>
     	    <field name="res_model">sale.mep_serv</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
     	    <field name="view_id" ref="mep_serv_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Cliquez pour créer une mise en place.
              </p>
            </field>
        </record>

	    <menuitem name="MEP, Service" parent="base.menu_sales" id="menu_mep_serv" action="mep_serv_action"/>


        <record id="reserv_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="Reservations">
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>

        <record id="reserv_action" model="ir.actions.act_window">
            <field name="name">Reservations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','=','reserved')]</field>
            <field name="view_id" ref="reserv_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cliquez pour créer une réservation.
                </p>
            </field>
        </record>

        <menuitem name="Reservations" parent="base.menu_sales" id="menu_reserv" action="reserv_action" sequence="28"/>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='invoice_corrected']" position="after">
                        <button name="action_button_reserv" string="Reserve" type="object" states="draft,sent" groups="base.group_user"/>
                        <button name="action_button_reserv" string="Reserve" type="object" states="draft,sent" class="oe_highlight" groups="base.group_user"/>

                    </xpath>
                    <xpath expr="//button[@name='action_button_confirm']" position="replace">
                        <button name="action_button_confirm" states="reserved" string="Confirm Menus" class="oe_highlight" type="object" groups="base.group_user"/>
                    </xpath>
                <data>
            </field>
        </record>
    </data>
</openerp>

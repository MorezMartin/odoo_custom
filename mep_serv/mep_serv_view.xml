<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_mep_tree" model="ir.ui.view">
            <field name="name">sale.mep_serv.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                    <tree string="Dossiers">
                        <field name="date_order"/>
                        <field name="partner_shipping_id"/>
                        <field name="partner_id"/>
                        <field name="name"/>
                        <field name="type_presta"/>
                        <field name="state"/>
                    </tree>
            </field>
        </record>

        <record id="mep_serv_action" model="ir.actions.act_window">
            <field name="name">Dossiers</field>
            <field name="type">ir.actions.act_window</field>
     	    <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain">[('state','in',('reserved','mep_serv'))]</field>
     	    <field name="view_id" ref="view_mep_tree"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Cliquez pour cr√©er une mise en place.
              </p>
            </field>
        </record>

	    <menuitem name="Dossiers" parent="base.menu_sales" id="menu_mep_serv" action="mep_serv_action" sequence="6"/>

            <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='invoice_corrected']" position="after">
                        <button name="action_button_reserv" string="Reserve" type="object" states="draft,sent" class="oe_highlight" groups="base.group_user"/>

                    </xpath>
                    <xpath expr="//button[@name='invoice_corrected']" position="after">
                        <button name="action_button_mep_serv" string="Confirm Menus" type="object" states="draft,sent,reserved" class="oe_highlight" groups="base.group_user"/>
                    </xpath>
                    <xpath expr="//button[@name='action_button_confirm']" position="replace">
                        <button name="action_button_confirm" states="mep_serv" string="Confirm Conso" class="oe_highlight" type="object" groups="base.group_user"/>
                    </xpath>
                    <xpath expr="//button[@name='invoice_corrected']" position="after">
                        <button name="action_quotation_send" string="Send by Email" type="object" states="reserved" groups="base.group_user"/>
                        <button name="print_quotation" string="Print" type="object" states="reserved" groups="base.group_user"/>
                        <button name="cancel" states="reserved" string="Cancel Reservation" groups="base.group_user"/>
                    </xpath>
                </data>
            </field>
        </record>
                    <xpath expr="//menuitem[@action='action_orders']" position="replace">
                        <menuitem action="action_orders" id="menu_sale_order" parent="base.menu_sales" sequence="7" groups="base.group_sale_salesman,base.group_sale_manager"/>
                    </xpath>

    </data>
</openerp>

<openerp>
    <data>
 <template id="report_mep_document">
    <t t-call="report.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                    <strong t-if="o.partner_shipping_id == o.partner_invoice_id">Shipping address:</strong>
                    <div t-esc="o.partner_invoice_id" 
                        t-esc-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                    <div t-if="o.partner_shipping_id != o.partner_invoice_id" class="mt8">
                        <strong>Shipping address:</strong>
                        <div t-esc="o.partner_shipping_id" 
                            t-esc-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                    </div>                        
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-esc="o.partner_id"
                        t-esc-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
                </div>
            </div>

            <h2>
                <span t-esc="type_presta"/>
                <span t-if="o.state not in ['draft','sent']">Order N° </span>
                <span t-if="o.state in ['draft','sent']">Quotation N° </span>
                <span t-esc="o.name"/>
                <span t-if="o.noms"/>
                <br/>
                <span t-esc="o.noms"/>
            </h2>

            <div class="row mt32 mb32" id="informations">
                <div t-if="o.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-esc="o.client_order_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-3">
                    <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                    <strong t-if="o.state in ['draft','sent']">Quotation Date:</strong>
                    <p t-esc="o.date_order"/>
                    <p t-esc="o.horaire_fin"/>
                </div>
                <div t-if="o.user_id.name" class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-esc="o.user_id.name"/>
                </div>
                <div t-if="o.payment_term" class="col-xs-3">
                    <strong>Payment Term:</strong>
                    <p t-esc="o.payment_term"/>
                </div>
                <div t-if="o.couleur_deco or o.demandes_supp" class="col-xs-3">
                    <strong>Details:</strong>
                    <p t-esc="o.couleur_deco"/>
                    <p t-esc="o.demandes_supp"/>
                </div>

            </div>

            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>Quantity</th>
                        <th>Description</th>
                        <th>Timing</th>
                        <th>Quantité préparée</th>
                        <th>Quantité consommée</th>
                    </tr>
               </thead>
               <tbody class="sale_tbody">
                    <tr t-foreach="o.order_line" t-as="l">
                        <td>
                            <span t-esc="l.product_uom_qty"/>
                        </td>
                        <td>
                           <span t-esc="l.name"/>
                        </td>
                        <td>
                           <span t-esc="l.timing"/>
                        </td>
                        <td>
                        </td>
                        <td>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
</template>
<template id="report_mep">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'mep_serv.report_mep_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>

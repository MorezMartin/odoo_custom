<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
            <!-- Sale order form -->
        <record model="ir.ui.view" id="traiteur_form">
            <field name="name">sale.order.traiteur_form.view.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='date_order']" position="after">

                        <field name="horaire_fin"/>
                        <field name="type_presta"/>
                        <field name="couleur_deco"/>
			<field name="noms"/>
                        <field name="demandes_supp"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="traiteur_form_line">
            <field name="name">sale.order.line.traiteur_form.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                <xpath expr="//notebook/page/field[@name='order_line']/tree[@string='Sales Order Lines']/field[@name='product_id']" position="after">
                </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
